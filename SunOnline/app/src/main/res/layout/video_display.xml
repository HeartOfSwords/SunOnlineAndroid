<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    >
    <com.sunonline.custom_view.ScrollMain
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--轮播图区域 -->
            <com.sunonline.custom_view.ScrollViewPager
                android:background="#fff"
                android:id="@+id/scroll_image_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </com.sunonline.custom_view.ScrollViewPager>

            <!--公益课堂区域 -->
            <LinearLayout
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="公益课堂"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/public_teach"
                android:layout_width="match_parent"
                android:layout_height="550dp">
            </android.support.v7.widget.RecyclerView>
            <!-- 影视老司机区域-->
            <LinearLayout
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="影视老司机"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/video_driver"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </android.support.v7.widget.RecyclerView>
            <!--higo大学季-->
            <LinearLayout
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="higo大学季"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/higo_college"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </android.support.v7.widget.RecyclerView>
            <!--高校最强音-->
            <LinearLayout
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="高校最强音"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:id="@+id/colloge_most_voice"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </com.sunonline.custom_view.ScrollMain>


</LinearLayout>