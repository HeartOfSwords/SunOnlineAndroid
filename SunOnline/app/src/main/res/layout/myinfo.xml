<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:id="@+id/my_info_all"
    >
    <LinearLayout
        android:id="@+id/user_info_go_login_area"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="sorry,本页面的内容只有在登录后才可以展示"
           android:textColor="@android:color/darker_gray"
            />
        <Button
            android:id="@+id/myinfo_login"
            android:background="#7A67EE"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="去登录"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_login_after_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:orientation="horizontal"
           android:background="@drawable/default_back"
           >
           <com.meg7.widget.CustomShapeImageView
               android:id="@+id/my_info_area_user_image"
               android:layout_marginTop="30dp"
               android:layout_marginLeft="30dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/d"
               app:shape="circle"
               android:scaleType="centerCrop"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:id="@+id/my_info_area_user_name"
                       android:layout_marginTop="25dp"
                       android:layout_marginLeft="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="sanbel"
                       android:textColor="@android:color/white"
                       android:textSize="30sp"
                       />
                   <ImageButton
                       android:id="@+id/name_edit_btn"
                       android:layout_marginTop="23dp"
                       android:layout_marginLeft="14dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@android:drawable/ic_menu_edit"
                       android:background="@android:color/transparent"
                       />
               </LinearLayout>
               <TextView
                   android:id="@+id/data_time"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="日期：2016-7-25"
                   android:textColor="#8A8A8A"
                   />

           </LinearLayout>

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户信息"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/my_info_area_user_email"
                android:drawableStart="@android:drawable/sym_action_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="11112222111"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/my_info_area_user_phone"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="11112222111"
                android:drawablePadding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_area_update_pass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改密码"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/my_info_area_upload_image"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上传修改用户头像"
                android:textSize="20sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right_arrow"
                />
        </LinearLayout>

       <Button
           android:id="@+id/log_out"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="#7B68EE"
           android:textColor="@android:color/white"
           android:text="退 出 登 录"
           />


    </LinearLayout>

</RelativeLayout>
